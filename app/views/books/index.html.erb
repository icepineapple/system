 <h1>Books List</h1>

  <%= link_to "add book", new_book_path %>

  <table>
    <thead>
      <tr>
        <td>Book</td>
        <td>Intoduction</td>
        <td>Author</td>
        <td>Price</td>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.book %></td>
        <td><%= book.introduction %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td>
          <%= link_to "edit", edit_book_path(book) %>
          <%= link_to "delete", book, method: "delete", data: { confirm: 'delete?!'}%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>